<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_restaurant_info"
    android:background="@color/colorBackground"
    tools:context="com.egci392.findmefoodv2.RestaurantInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Information"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageRes"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textLocation"
        android:layout_below="@+id/imageRes"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageRes"
        android:background="#646262"
        android:textColor="#faf7f7"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/textInfo"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textLocation"
        android:background="#fdfcfc"
        android:textColor="#0c0101"
        android:layout_below="@+id/textLocation" />

    <Button
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/LocationButton"
        android:background="#143777"
        android:layout_below="@+id/textInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:onClick="mapLocationFunction" />
</RelativeLayout>
